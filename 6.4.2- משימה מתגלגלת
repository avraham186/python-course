import string

def is_valid_input(letter):
    if len(letter) == 1:
        check = True
    else:
        check = False

    if letter.isupper() or letter.islower():
        check1 = True
    else:
        check1 = False

    if (check == True) and (check1 == True):
        result = True
    else:
        result = False
    return result

