def check_valid_input(letter_guessed, old_letters_guessed):
        if len(letter_guessed) == 1:
            check = True
        else:
            check = False

        if letter_guessed.islower():
            check1 = True
        else:
            check1 = False

        if (check == True) and (check1 == True):
            guess = True
        else:
            guess = False

        if letter_guessed in old_letters_guessed:
            guess1 = False
        else:
            guess1 = True

        if (guess == True) and (guess1 == True):
            return True
        else:
            return False


